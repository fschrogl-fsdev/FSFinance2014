<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="fsfinance" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<class>at.schrogl.fsfinance.entities.User</class>
		<class>at.schrogl.fsfinance.entities.Account</class>
		<class>at.schrogl.fsfinance.entities.Transaction</class>
		<class>at.schrogl.fsfinance.entities.Label</class>
		
		<properties>
			<!-- ======================================================= -->
			<!-- Generic JPA Configuration -->
			<!-- ======================================================= -->

			<!-- Connection Properties -->
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/fsfinance" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- Schema Creation -->
			<!-- Values: none (default)|create|drop-and-create|drop -->
			<property name="javax.persistence.schema-generation.database.action" value="none" />

			<!-- Values: metadata (default)|script|metadata-then-script|script-then-metadata -->
			<property name="javax.persistence.schema-generation.create-source" value="script" />
			<property name="javax.persistence.schema-generation.create-script-source" value="META-INF/sql/create-tables.sql" />

			<!-- ======================================================= -->
			<!-- Specific Persistence Provider Configuration (Hibernate) -->
			<!-- ======================================================= -->

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
			<property name="hibernate.order_updates" value="true" />
			<property name="hibernate.current_session_context_class" value="thread" />
			<property name="hibernate.show_sql" value="false" />
		</properties>
				
	</persistence-unit>

</persistence>
